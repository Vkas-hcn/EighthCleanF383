<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_pic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tue,mar 14"
        android:textColor="#FF5D5D5D"
        android:textSize="12sp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_ca_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_disselete_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pic_date"
        app:layout_constraintStart_toEndOf="@+id/tv_pic_date"
        app:layout_constraintTop_toTopOf="@+id/tv_pic_date" />
    
    <TextView
        android:id="@+id/tv_group_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 MB"
        android:textColor="#99333E53"
        android:textSize="10sp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pic_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_pic_date" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pic_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/item_pic_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_pic_date" />
</androidx.constraintlayout.widget.ConstraintLayout>