<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wei"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_no_junk">

    <!-- 工具栏 -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Scanning"
            android:textColor="#FF333E53"
            android:textSize="20sp" />

    </RelativeLayout>

    <!-- 扫描详情区域 -->
    <LinearLayout
        android:id="@+id/scanning_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 大小显示容器 -->
        <LinearLayout
            android:id="@+id/size_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_scanned_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/futura_black_bold"
                android:textColor="#333E53"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tv_scanned_size_un"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="3dp"
                android:textColor="#333E53"
                android:text="KB"
                android:fontFamily="@font/futura_black_bold"
                android:textSize="21sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_scanning_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxWidth="250dp"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:text="Ready to scan..."
            android:textColor="#9C333E53"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 背景图片 -->
    <ImageView
        android:id="@+id/img_scan_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_pic_top" />

    <!-- 清理按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clean_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#4487FF"
        android:enabled="false"
        android:text="Delete"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:cornerRadius="30dp"
        app:elevation="5dp"
        tools:enabled="true" />

    <!-- 分类列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_scan_bg"
        android:layout_above="@id/btn_clean_now"
        android:layout_margin="20dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        tools:listitem="@layout/item_category" />

</RelativeLayout>
